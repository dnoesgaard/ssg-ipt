$signup_bg = #444
$signup_color = #ddd
$signup_border_color = none
$signupInput_color = #444
$signup_form_margin = 0.25

.article .block-content .NewsletterSignup {
	background $signup_bg
	padding vr-block(.5) vr-block($articleMarginSmall - $signup_form_margin) 0 vr-block($articleMarginSmall - $signup_form_margin)
	margin 0
	margin-left -(vr-block($articleMarginSmall))
	margin-right -(vr-block($articleMarginSmall))
	margin-top -($articleMarginTop)
	color $signup_color
	border solid vr-block(.25) $signup_border_color
	a {
		border-bottom none
		cursor pointer
	}
	form {
		>div {
			display flex
			flex-wrap wrap
			input {
				color $signupInput_color
				display inline-block
				flex 1 1 auto
				margin vr-block(.25)
				padding vr-block(.5)
			}
			>div {
				display flex
				flex 1 1 auto
				flex-wrap wrap
			}
			.NewsletterSignup__email {
				flex 1 0 auto
				min-width 200px
			}
		}
		&:after {
			content: " ";
			display: block;
			height: 0;
			clear: both;
		}

		.NewsletterSignup__submit {
			float right
			i {
				font-size 3rem
			}
			span {
				position absolute
				left -9999px
			}
		}
		input.NewsletterSignup_submit {
			display none
		}
	}

	h3, p {
		margin vr-block(.25)
	}
}

+isAbove($laptop) {
	.article .block-content .NewsletterSignup {
		padding vr-block(.5) vr-block($articleMarginLarge - $signup_form_margin) 0 vr-block($articleMarginLarge - $signup_form_margin)
		margin-left -(vr-block($articleMarginLarge))
		margin-right -(vr-block($articleMarginLarge))
	}

}