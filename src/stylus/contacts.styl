
//Recommended data centers
article.contactusXXXX .block {
	&:nth-of-type(2) {
		text-align center
		.block-content {
			max-width 800px
			margin 0 auto
			padding vr-block(1)
			padding-top 0
		}
		h2 {
			font-weight bold
			color $DarkBlue
		}
		p {
			font-size 18px
			color #888
		}
	}
}


// Map
article.contactus {
	.map {
		margin-left -($articleMarginSmall)
		margin-right -($articleMarginSmall)
	}
}

+isAbove($laptop) {
	article.contactus {
		.map {
			margin-left -($articleMarginLarge)
			margin-right -($articleMarginLarge)
		}
	}
}