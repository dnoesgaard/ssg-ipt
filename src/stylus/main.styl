.SiteHeader {
	.SiteHeader__mobileOptions .navbar_action>a>span {
		text-shadow 0px 0px 1px darken($DustyBlue, 10%)
	}
}

.SiteHeader__mobileOptions, .ServiceMenu__teaser {
	.home {
		line-height 4.125rem
		padding 0
		>span {
			font-size 2rem
			font-weight bold
		}
		&:before {
			display none
		}
	}
}

+isAbove($laptop) {
	.SiteNav .ServiceMenu {
		float right
		position static
		.ServiceMenu__search {
			>a:before {
				margin 0
				line-height $navbar_height
			}
			span {
				visibility hidden
			}
		}
	}
	.SiteNav .MainMenu {
		> a {
			&:before {
				display none
			}
			span {
				font-size 2rem
				font-weight bold
			}
		}
		> ul {
			float right
		}
	}
	.SiteNav {
		>div>ul>li>a,  >div>a>span {
			text-shadow 0px 0px 1px darken($DustyBlue, 10%)
		}
	}
	.article {
		.block {
			border 1px solid #eaeaea
		}
			.block-first {
				border-top none
			}
	}
}

//hide default menu arrow when not active
+isAbove($laptop) {
	.SiteNav >div>ul>li.isCategory {
		>a:hover:after {
			display none
		}
	}
	.SiteNav.isExpanded >div>ul>li.isCategory.isExpanded {
		>a:hover:after {
			display block
		}
	}
}

.article {
	.comment-warning {
		padding 20px
		background tomato
		color white
		font-weight bold
	}
}